class Game{
    field Board board;
    constructor Game new(){
        let board = Board.new();
        return this;
    }


    method void DrawAll(){
        var int i;
        let i = 0;

        while (i < 64){
            do board.DrawFigure(i);
            let i = i + 1;
        }   
        return;
    }

    method void GameLoop(){
        var Array input;
        while(-1){
            let input = Help.GetInputChars(4);
            do DrawAll();
        }
        return;
    }

}